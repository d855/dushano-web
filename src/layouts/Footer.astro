<footer class="lg:pl-68">
    <div
        class="flex flex-col md:flex-row justify-between items-center pr-5 py-3"
    >
        <div>Let's chat</div>
        <div class="flex flex-col items-end text-neutral-400">
            <span id="time" class="time text-7xl uppercase"></span>
            <span>Belgrade, Serbia</span>
        </div>
    </div>
</footer>

<script>
    function getTime() {
        const now = new Date();

        const belgradeTime = now.toLocaleTimeString("en-GB", {
            timeZone: "Europe/Belgrade",
            hour: "2-digit",
            minute: "2-digit",
            hour12: true,
        });

        document.getElementById("time").textContent = belgradeTime;
    }

    getTime();

    setInterval(getTime, 1000);
</script>
