---
import { Image } from "astro:assets";

interface Props {
    title: string;
    description?: string;
    image: string;
    imageAlt: string;
    url: string;
}

const { title, description, image, imageAlt, url } = Astro.props;
---

<article class="relative group overflow-hidden">
    <Image
        width={350}
        height={350}
        src={image}
        alt={imageAlt}
        loading="eager"
        class="w-full h-auto aspect-square object-cover transition-transform duration-300 group-hover:scale-105"
    />
    <div
        class="absolute inset-0 bg-black opacity-0 group-hover:opacity-80 transition-opacity duration-500 flex items-end"
    >
        <h3 class="text-white px-4 py-3 w-full font-medium">
            {title}
        </h3>
    </div>
    <a href={url} aria-label="Read full story" class="absolute inset-0"></a>
</article>
